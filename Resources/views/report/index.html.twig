{% extends '@LoevgaardDandomainConsignment/layout.html.twig' %}

{% trans_default_domain 'LoevgaardDandomainConsignmentBundle' %}

{% block ldc_content %}
    <h1>{{ 'report.index.heading'|trans }}</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>{{ 'report.property.id'|trans }}</th>
                <th>{{ 'report.property.created_at'|trans }}</th>
                <th>{{ 'report.property.manufacturer'|trans }}</th>
                <th>{{ 'report.property.status'|trans }}</th>
                <th>{{ 'report.property.total'|trans }}</th>
                <th>{{ 'actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for report in reports %}
            <tr>
                <td>{{ report.id }}</td>
                <td>{{ report.createdAt|date }}</td>
                <td>{{ report.manufacturer.name }}</td>
                <td>{{ report.status }}</td>
                <td><a href="{{ path('loevgaard_dandomain_consignment_report_show', { 'id': report.id }) }}">{{ 'show'|trans }}</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(reports) }}
    </div>
{% endblock %}
